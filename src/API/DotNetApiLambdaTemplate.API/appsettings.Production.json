{
    "Logging": {
        "LogLevel": {
            "Default": "Warning",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore": "Error",
            "DotNetApiLambdaTemplate": "Information"
        }
    },
    "ConnectionStrings": {
        "PostgreSQL": "${DB_CONNECTION_STRING}",
        "DynamoDB": "${DYNAMODB_ENDPOINT}"
    },
    "AWS": {
        "Region": "${AWS_REGION}",
        "AccessKeyId": "${AWS_ACCESS_KEY_ID}",
        "SecretAccessKey": "${AWS_SECRET_ACCESS_KEY}",
        "S3Bucket": "${S3_BUCKET_NAME}",
        "SQSQueue": "${SQS_QUEUE_URL}",
        "SNSTopic": "${SNS_TOPIC_ARN}",
        "EventBridge": "${EVENTBRIDGE_BUS_NAME}"
    },
    "Okta": {
        "Authority": "${OKTA_AUTHORITY}",
        "Audience": "${OKTA_AUDIENCE}",
        "ClientId": "${OKTA_CLIENT_ID}",
        "ClientSecret": "${OKTA_CLIENT_SECRET}"
    },
    "Redis": {
        "ConnectionString": "${REDIS_CONNECTION_STRING}",
        "InstanceName": "DotNetApiLambdaTemplate-Prod"
    },
    "Cors": {
        "AllowedOrigins": [
            "${ALLOWED_ORIGINS}"
        ]
    },
    "RateLimiting": {
        "RequestsPerMinute": 100,
        "BurstLimit": 200
    },
    "Caching": {
        "DefaultTTL": 900,
        "UserCacheTTL": 600,
        "ProductCacheTTL": 1800,
        "OrderCacheTTL": 300
    },
    "HealthChecks": {
        "DatabaseTimeout": 30,
        "ExternalServiceTimeout": 10
    },
    "Security": {
        "RequireHttps": true,
        "HstsMaxAge": 31536000
    }
}